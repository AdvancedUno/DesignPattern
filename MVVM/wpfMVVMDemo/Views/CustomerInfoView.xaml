<Window x:Class="wpfMVVMDemo.Views.CustomerInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfMVVMDemo.Views"
        mc:Ignorable="d"
        Title="CustomerInfoView" Height="200" Width="300">
    <DockPanel LastChildFill="True">
        <Label DockPanel.Dock="Top" FontSize="46" FontFamily="Mistral" Foreground="#696969">Saved</Label>
        <Rectangle DockPanel.Dock="Bottom" Height="64" Fill="#ECECEC"/>
        <Label DockPanel.Dock="Top" Content="{Binding Info, FallbackValue='Data Updated'}" VerticalAlignment="Bottom"/>
    </DockPanel>
</Window>
